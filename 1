int main(){
    char str[100];
    int count,i;
    printf("Enter a string :");
    gets(str);
    i=0;
    count=0;
    while(str[i] !='\0')
    {
        if(str[i]==' ' && str[i+1]!=' ')
        {
            count++;
        }
        i++;
    }
    count=count+1;
    printf("Number of words = %d\n", count);
           
        return 0;
    
}

