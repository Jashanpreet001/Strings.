#include <iostream>

void stringconcateante(char str1[100],char str2[100]);

int main(){
    char s1[100],s2[100];
    printf("Enter first string :");
    gets(s1);
    printf("Enter second string :");
    gets(s2);
    stringconcateante(s1,s2);
    printf("string s1 = %s\n",s1);
    return 0;
}

void stringconcateante(char str1[100],char str2[100])
{
    unsigned long  i,j;
    i=strlen(str1);
    printf("%lu",i);
    j=0;
    while(str2[j] != '\0')
    {
        str1[i]=str2[j];
        i++;
        j++;
    }
    str1[i]='\0';
        
    }
    
    


